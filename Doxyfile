PROJECT_NAME=QP

# Generate a pretty treeview on the side
GENERATE_TREEVIEW=YES

# No latex
GENERATE_LATEX=NO

# Single-header field and README.md as main page
INPUT=qp.h README.md
USE_MDFILE_AS_MAINPAGE=README.md

# Show everything, even when documentation is lacking
EXTRACT_ALL=YES

# Show in declaration order
SORT_MEMBER_DOCS=NO

# First sentence of command is the "brief"
JAVADOC_AUTOBRIEF=YES
